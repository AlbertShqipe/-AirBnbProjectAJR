<h2>Modifie ton profil</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, label: "PrÃ©nom", required: true, autofocus: true %>
    <%= f.input :last_name, label: "Nom", required: true, autofocus: true %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :avatar, as: :file %>


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: "Mot de passe",
                hint: "laissez ce champ vide si vous ne voulez pas modifier le mot de passe",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: "Confirmation de mot de passe",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password, label: "Mot de passe actuel",
                hint: "Vous devez remplir ce champ avec le mot de passe actuel pour valider les modifications",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

    <%= f.button :submit, "Modifier", class:'btn' %>
<% end %>

<h3>Supprime ton profil</h3>

<div>
  <p class="mb-2">Insatisfait?</p>
  <%= button_to "Supprime ton profil", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
</div>

<%= link_to "Retour", :back, class:"btn" %>
