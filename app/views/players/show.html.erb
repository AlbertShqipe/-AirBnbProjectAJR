<div class="container mt-4">
  <div class="big-card">
    <div class="player-photo">
      <% if @player.img.present? %>
        <%= image_tag(@player.img) %>
      <% else %>
        <%= cl_image_tag @player.photo.key %>
      <% end %>
    </div>
    <div class="infos">
      <div class="player-name">
        <h1><%= @player.name %></h1>
        </div>
        <div class="player-price">
          <h2><%= "#{@player.price_per_day/1000} € / jour" %></h2>
        </div>
    </div>
    <div class="club-photo">
      <% if @player.club == 'Liverpool' %>
        <%= image_tag('Liv.png') %>
      <% elsif @player.club == 'Benfica Lisbonne' %>
        <%= image_tag('BL.png') %>
      <% else %>
        <%= image_tag('Juv.png') %>
      <% end %>
    </div>
  </div>

  <div class="container mt-5">
      <div class="row">
        <div class="col-8">
          <div class="infos-card">
            <div class="icon">
              <h1><i class="fa-solid fa-user-tie"></i></h1>
            </div>
            <div class="text">
              <h5>Propriétaire</h5>
              <h6>Le propriétaire de <%= @player.name %> est <%= @player.owner.first_name.capitalize %> <%= @player.owner.last_name.capitalize %>.</h6>
            </div>
          </div>
          <div class="infos-card">
            <div class="icon">
              <h1><i class="fa-solid fa-arrows-up-down-left-right"></i></h1>
            </div>
            <div class="text">
              <h5>Position</h5>
              <h6><%= @player.name %> est un <%= @player.position.downcase %>.</h6>
            </div>
          </div>
          <div class="infos-card">
            <div class="icon">
              <h1><i class="fa-solid fa-cake-candles"></i></h1>
            </div>
            <div class="text">
              <h5>Age</h5>
              <h6><%= @player.name %> a <%= @player.age %> ans.</h6>
            </div>
          </div>
          <div class="infos-card">
            <div class="icon">
              <h1><i class="fa-solid fa-shoe-prints"></i></h1>
            </div>
            <div class="text">
              <h5>Meilleur pied</h5>
              <h6>Le meilleur pied de <%= @player.name %> est le pied <%= @player.foot %>.</h6>
            </div>
          </div>
          <div class="infos-card">
            <div class="icon">
              <h1><i class="fa-solid fa-ruler"></i></h1>
            </div>
            <div class="text">
              <h5>Taille</h5>
              <h6><%= @player.name %> mesure <%= @player.height %>.</h6>
            </div>
          </div>
          <div class="infos-card">
            <div class="icon">
              <h1><i class="fa-solid fa-earth-americas"></i></h1>
            </div>
            <div class="text">
              <h5>Nationalité</h5>
              <h6><%= @player.name %> est originaire de : <%= @player.nationality %>.</h6>
            </div>
          </div>
          <div class="infos-card">
            <div class="icon">
              <h1><i class="fa-solid fa-address-book"></i></h1>
            </div>
            <div class="text">
              <h5>Adresse</h5>
              <h6><%= @player.name %> réside ? <%= @player.address %></h6>
            </div>
          </div>
        </div>
        <div class="col-4">
          <div class="booking">
            <h1><%= @player.price_per_day / 1000 %> € <span class="small">par jour.</span></h1>
          </div>
          <div class="not-visible"></div>
        </div>
      </div>
    </div>

  <p>
    <%= link_to "Booking this player", new_player_booking_path(@player)  %>
  </p>
  <p>
    <%= link_to "Back", players_path %>
  </p>
</div>
