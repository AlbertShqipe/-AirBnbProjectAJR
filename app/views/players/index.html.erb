<h1>Bienvenue au Nouveau Mercato</h1>
<div class="container">
  <div>
    <%= form_with url: players_path, method: :get do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Quelle poste souhaitez-vous renforcer ?"
        %>
      <%= submit_tag "Chercher", name: "Position", class: "button mt-3", id:"button-home" %>
    <% end %>
  </div>

<section class="tiles">
  <% @players.each do |player| %>
  <article class="style1">
    <% if player.img.present? %>
      <span class="image">
        <%= image_tag(player.img) %>
      </span>
    <% else %>
      <span class="image">
        <%= cl_image_tag player.photo.key %>
      </span>
    <% end %>
		<a href="/players/<%= player.id %>">
      <h5 id="text-tiles"><%= player.name %></h5>
      <br>
      <h3><%= player.price_per_day%> â‚¬</h3>
      <div class="content">
      <h5><%= player.position %></h5>
      </div>
		</a>
	</article>
  <% end %>
</section>
</div>
