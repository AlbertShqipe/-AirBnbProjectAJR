<h1>Welcome to the Players List ⚽️</h1>

<p>Click on the player that you'd like to rent</p>


<section class="tiles">
  <% @players.each do |player| %>
  <article class="style1">
    <% if player.img.present? %>
      <span class="image">
        <%= image_tag(player.img) %>
      </span>
    <% else %>
      <span class="image">
        <%= cl_image_tag player.photo.key%>
      </span>
    <% end %>
		<a href="/players/<%= player.id %>">
      <div class="content">
      <h2><%= player.name %></h2>
      <h3><%= player.club %></h3>
        <h3><%= player.price_per_day%> €</h3>
      </div>
		</a>
	</article>
  <% end %>
</section>

<% if user_signed_in? %>
  <%= link_to "Add a new player", new_player_path, class: 'btn' %>
<% else %>
  <%= link_to "Sign in", new_user_session_path %>
<% end %>
