<%= simple_form_for(player) do |f| %>
  <%= f.input :name, label: "Nom" %>
  <%= f.input :position %>
  <%= f.input :age %>
  <%= f.input :nationality, label: "Nationalité" %>
  <%= f.input :height, label: "Taille" %>
  <%= f.input :foot, label: "Pied" %>
  <%= f.input :club %>
  <%= f.input :market_value, label: "Valeur de marché" %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, f.object.persisted? ? 'Modifier' : 'Créer'  %>
<% end %>
